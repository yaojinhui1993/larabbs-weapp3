<style lang="less">

// 分类
.weui-flex {
  align-items: center;
}

.weui-cells {
  margin-top: 0;
  opacity: 0;
  transition: .3s;
  &:before,&:after {
    display: none;
  }
  &_show {
    opacity: 1;
  }
}

.weui-cell {
  &:before {
    right: 15px;
  }
}

.category-list__item {
  margin: 10px 0;
  background-color: #FFFFFF;
  border-radius: 2px;
  overflow: hidden;
  &:first-child {
    margin-top: 0;
  }
}

.category-list__item_seleted {
  background-color: #EEEEEE;
}

.category-list__img {
  width: 30px;
  height: 30px;
}

.category-list__item-hd {
  padding: 20px;
  transition: opacity .3s;
  &_show {
    opacity: .4;
  }
}

.category-list__item-bd {
  height: 0;
  overflow: hidden;
  &_show {
    height: auto;
  }
}


</style>

<template>
<div class="page">

  <div class="category-list__item">
    <div class="weui-flex category-list__item-hd" @tap="categoriesToggle">
      <div class="weui-flex__item page-title">{{ currentCategoryName }}</div>
      <image class="category-list__img" src="/assets/images/category.png" />
    </div>

  </div>

  <topic-list :topics="resourceData" :no-more-data="noMoreData"></topic-list>
</div>
</template>
<config>
{
  enablePullDownRefresh: true,
  usingComponents: {
    "topic-list": "~@/components/topic-list"
  }
}
</config>

<script>
import wepy from '@wepy/core';
import { getTopics, getCategories } from '@/api/topic';
import listRefresh from '@/mixins/list-refresh.js';
import eventHub from '@/common/eventHub';
import syncBadge from "@/mixins/sync-badge";
import { mapGetters } from "@wepy/x";
import store from "@/store";

wepy.page({
  store,
  mixins: [ listRefresh, syncBadge ],
  data: {
    // 分类数据
    categories: [],
    // 当前的分类
    currentCategory: {},
    // 是否显示分类
    categoryOpen:false,
  },
  computed: {
    currentCategoryId() {
      return this.currentCategory.id || null;
    },
    currentCategoryName() {
      return this.currentCategory.name || '话题';
    },

    ...mapGetters(['unreadCount']),
  },

  async onLoad() {
    this.loadData();
    this.loadCategories();

    eventHub.$on('topic-deleted', (topic) => {
      this.page = 1;
      this.noMoreData = false;
      this.loadData(true);
    });
  },

  methods: {
    async loadCategories() {
      // 从缓存中获取分类数据
      let categories = wx.getStorageSync('categories');

      if (!categories) {
        const categoriesResponse = await getCategories();
        categories = categoriesResponse.data.data;

        wx.setStorageSync('categories', categories);
      }

      this.categories = categories;
    },

    categoriesToggle() {
      this.categoryOpen = !this.categoryOpen;
    },

    async fetchData() {
      let params = {
        page: this.page,
        include: 'user,category',
      }

      if (this.currentCategoryId) {
        params['filter[category_id]'] = this.currentCategoryId;
      }

      return getTopics(params);
    },

    async changeCategory (category = {}) {
      this.currentCategory  = category;
      this.categoryOpen = false;
      this.page = 1;

      // 设置 reset 为 true
      this.loadData(true);
    },
  }
})
</script>
